<% layout('layout/biolerplate') %>

    <div class="container mt-5">
        <h1 class="text-center">Products</h1>
        <div class="row">
            <% products.forEach(product=> { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= product.name %>
                            </h5>
                            <a href="/product/<%= product._id %>" class="btn btn-primary">View</a>
                        </div>
                    </div>
                </div>
                <% }); %>
        </div>
    </div>