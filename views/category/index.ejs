<% layout('layout/biolerplate') %>

    <div class="container mt-5">
        <h1 class="text-center">Categories</h1>
        <div class="row">
            <% categories.forEach(category=> { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= category.name %>
                            </h5>
                            <a href="/products?category=<%= category._id %>" class="btn btn-primary">View Products</a>
                        </div>
                    </div>
                </div>
                <% }); %>
        </div>
    </div>